<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.metadatacenter</groupId>
  <artifactId>cedar-user-server</artifactId>
  <version>0.1.0</version>
  <packaging>pom</packaging>

  <name>CEDAR User Server</name>
  <description>CEDAR server to handle user data
  </description>

  <modules>
    <module>cedar-user-server-core</module>
    <module>cedar-user-server-play</module>
  </modules>

  <properties>
    <java.version>1.8</java.version>
    <scala.version>2.11.5</scala.version>
    <scala.dependencies.version>2.11</scala.dependencies.version>
    <play2.version>2.3.8</play2.version>
    <play2.scala.version>2.11</play2.scala.version>
    <apache.httpclient.version>4.4.1</apache.httpclient.version>

    <junit.version>4.12</junit.version>
    <fge.version>2.2.6</fge.version>
    <slf4j.version>1.7.7</slf4j.version>
    <logback.version>1.1.3</logback.version>

    <scala.maven.plugin.version>3.1.6</scala.maven.plugin.version>
    <play2.maven.plugin.version>1.0.0-beta1</play2.maven.plugin.version>
    <maven.surefire.plugin.version>2.16</maven.surefire.plugin.version>
    <maven.compiler.plugin.version>3.1</maven.compiler.plugin.version>

    <play-java-ws.version>2.3.8</play-java-ws.version>

    <org.metadatacenter.cedar.server.utils.version>0.1.0</org.metadatacenter.cedar.server.utils.version>
    <org.metadatacenter.cedar.template.operations.version>0.1.0</org.metadatacenter.cedar.template.operations.version>
    <org.metadatacenter.cedar.user.operations.version>0.1.0</org.metadatacenter.cedar.user.operations.version>
    <org.metadatacenter.cedar.auth.operations.version>0.1.0</org.metadatacenter.cedar.auth.operations.version>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.scala-lang</groupId>
      <artifactId>scala-library</artifactId>
      <version>${scala.version}</version>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
    </dependency>

    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>${logback.version}</version>
    </dependency>
  </dependencies>

</project>
