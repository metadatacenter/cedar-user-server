# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET            /                              controllers.MainUserServerController.index()

# Users
POST           /users                         controllers.UserServerController.createUser()
GET            /users/:id                     controllers.UserServerController.findOwnUser(id: String)
GET            /users/:id/summary             controllers.UserServerController.findUserSummary(id: String)

# For CORS - preflight request
OPTIONS        /*all                          controllers.MainUserServerController.preflight(all)

## Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)
